{
    "extends": "@verney/ts-config/base",
    "compilerOptions": {
        "paths": {
            "@/*": ["./*"],
            "@verney/ui": ["../../packages/ui/src"]
        },
        "noEmit": true,
        "incremental": true,
        "jsx": "preserve"
    },
    "include": [
        "pages/*",
        "styles/*",
        "components/*",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.mdx",
        "**/*.js",
        ".eslintrc.js",
        "next.config.js",
        "postcss.config.js",
        "tailwind.config.js"
    ],
    "exclude": ["node_modules"]
}
